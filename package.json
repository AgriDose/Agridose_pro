{
  "name": "agridose-backend",
  "version": "1.0.0",
  "description": "Backend system for AgriDose agricultural app with enhanced performance",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "NODE_ENV=production node server.js",
    "dev": "NODE_ENV=development nodemon server.js",
    "test": "NODE_ENV=test jest --detectOpenHandles --forceExit",
    "lint": "eslint .",
    "seed": "node database/seed.js"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "agriculture",
    "fertilizer",
    "pesticide",
    "calculator",
    "performance"
  ],
  "author": "Boukhecha Mokhtar",
  "license": "MIT",
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "helmet": "^7.1.0",
    "mongoose": "^8.0.3",
    "express-async-handler": "^1.2.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.6.2",
    "eslint": "^8.48.0",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/middleware/"
    ]
  }
}
